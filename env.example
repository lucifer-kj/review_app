# Crux Environment Configuration
# Copy this file to .env and update with your actual values

# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Frontend Configuration (REQUIRED)
VITE_FRONTEND_URL=https://your-domain.com

# Base Domain for Public Review URLs (REQUIRED)
# This is used to generate the full public review URLs
BASE_DOMAIN=https://your-domain.com

# App Configuration (OPTIONAL)
VITE_APP_NAME=Crux
VITE_SUPPORT_EMAIL=support@yourcompany.com

# Email Service Configuration (OPTIONAL)
# Choose one of the following email services
VITE_RESEND_API_KEY=your_resend_api_key_here
VITE_SENDGRID_API_KEY=your_sendgrid_api_key_here
VITE_EMAILJS_USER_ID=your_emailjs_user_id_here
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id_here
VITE_EMAILJS_TEMPLATE_ID=your_emailjs_template_id_here

# Security & Monitoring (OPTIONAL)
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_GA_TRACKING_ID=your_ga_tracking_id_here
VITE_VERCEL_ANALYTICS_ID=your_vercel_analytics_id_here

# Feature Flags (OPTIONAL)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_USAGE_METRICS=true

# Backup & Storage (OPTIONAL)
VITE_BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here
VITE_S3_BUCKET_NAME=your_s3_bucket_name_here
VITE_S3_REGION=your_s3_region_here
